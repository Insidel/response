@model ResponseMois.Model.Course
@{
    ViewBag.Title = "Přiřazení stuedntů ke kurzu";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>


@using (Html.BeginForm("CourseAssignStudents", "Teacher", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Přiřazení studentů - studenti školy</h4>
    <hr />
    @Html.ValidationSummary()
    
    foreach (var st in ViewBag.students)
    {
            <input type="checkbox" name="selectedObjects" value="@st.ID" /> @st.firstName @st.lastName @st.birthDate <br />
    }
    
    <input type="hidden" name="courseID" value="@ViewBag.courseID" />
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Přiřadit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
