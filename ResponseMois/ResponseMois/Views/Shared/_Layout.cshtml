<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Response system</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
@model ResponseMois.Model.User
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Response system", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                </ul>
                @if (User.Identity.IsAuthenticated && ViewBag.isInRoleTeacher)
                {
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Testy", "TestsEdit", "Teacher")</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Studenti", "StudentsEdit", "Teacher")</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Kurzy", "CoursesEdit", "Teacher")</li>
                </ul>
                }
                
                @if (User.Identity.IsAuthenticated && ViewBag.isInRoleStudent)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Kurzy", "Courses", "Student")</li>
                    </ul>
                }

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Response system by valenfi1 & zmitkma1</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
